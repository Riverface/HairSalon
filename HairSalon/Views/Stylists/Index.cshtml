@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

else
{
  <table>
    <tr>
      <td>
        ID
      </td>
      <td>Name</td>
    </tr>

  @foreach (Stylist stylist in Model)
  {
    <tr>
      <td>@stylist.StylistId</td> 
      <td>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</td>
    </tr>  
  }
  
  </table>
}

<p>@Html.ActionLink("Add new stylist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>